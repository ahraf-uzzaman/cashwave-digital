{
    "version": 2,
    "builds": [
      {
        "src": "public/**/*.html",
        "use": "@vercel/static"
      },
      {
        "src": "public/**/*.js",
        "use": "@vercel/static"
      },
      {
        "src": "public/**/*.css",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/",
        "dest": "/public/index.html"
      },
      {
        "src": "/login",
        "dest": "/public/login.html"
      },
      {
        "src": "/register",
        "dest": "/public/register.html"
      },
      {
        "src": "/admin",
        "dest": "/public/admin-panel.html"
      },
      {
        "src": "/orders",
        "dest": "/public/orders.html"
      },
      {
        "src": "/success",
        "dest": "/public/success.html"
      },
      {
        "src": "/(.*)",
        "dest": "/public/$1"
      }
    ],
    "env": {
      "NODE_ENV": "production"
    }
  }